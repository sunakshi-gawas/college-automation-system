<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment_college_pay_page">


    <Spinner
        android:id="@+id/pay_in"
        android:layout_width="348dp"
        android:layout_height="48dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        android:entries="@array/installment"
        app:layout_constraintBottom_toTopOf="@+id/txt_paynow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/paynow"
        android:layout_width="259dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:text="Pay College Fee"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txt_paynow"
        android:layout_width="363dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:digits="0123456789"
        android:ems="10"
        android:hint="Enter The Amount You Want To Pay Now"
        android:inputType="phone"
        android:textColorHint="#7929292B"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/paynow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="364dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:paddingTop="5dp"
        android:text="College Fee Section"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="236dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:paddingTop="5dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <LinearLayout
        android:id="@+id/linearLayout25"
        android:layout_width="372dp"
        android:layout_height="319dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="18dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/pay_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="231dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#a2a2a2"
                android:text=" Description"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview36"
                android:layout_width="191dp"
                android:layout_height="match_parent"
                android:background="#d0d0d0"
                android:text=" Amount"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview32"
                android:layout_width="148dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#a2a2a2"
                android:text=" University Fee"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_rem_alrdypay"
                android:layout_width="191dp"
                android:layout_height="match_parent"
                android:background="#d0d0d0"
                android:paddingStart="15dp"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView33"
                android:layout_width="216dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#a2a2a2"
                android:text=" Medical fees"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_rem_remain"
                android:layout_width="191dp"
                android:layout_height="match_parent"
                android:background="#d0d0d0"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView34"
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#a2a2a2"
                android:text=" Department fees"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_deppartmentfees"
                android:layout_width="191dp"
                android:layout_height="match_parent"
                android:background="#d0d0d0"
                android:paddingStart="20dp"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView37"
                android:layout_width="172dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#a2a2a2"
                android:text=" Tuition fees "
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_totalfees"
                android:layout_width="191dp"
                android:layout_height="match_parent"
                android:background="#d0d0d0"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView38"
                android:layout_width="172dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#a2a2a2"
                android:text=" TOTAL"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_totalfees1"
                android:layout_width="191dp"
                android:layout_height="match_parent"
                android:background="#d0d0d0"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView152"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="TextView"
            tools:visibility="invisible" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>