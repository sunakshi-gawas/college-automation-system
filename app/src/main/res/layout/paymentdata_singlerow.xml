<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    app:cardCornerRadius="5dp"
    android:elevation="4dp"
    android:background="@color/white_200"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="383dp"
        android:layout_height="match_parent"
        android:textAlignment="center"
         android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="Name"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView88"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text=" Permission Details"
                android:background="@color/white_500"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView130"
                android:layout_width="197dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text=" Email" />

            <TextView
                android:id="@+id/u3"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/u1"
                android:layout_alignParentStart="true"
                android:text=" TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView131"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text=" Section" />

            <TextView
                android:id="@+id/u4"
                android:layout_width="220dp"
                android:layout_height="25dp"
                android:layout_below="@+id/u2"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/u3"
                android:text=" TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView135"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text=" PaymentID" />

            <TextView
                android:id="@+id/u5"
                android:layout_width="220dp"
                android:layout_height="25dp"
                android:layout_below="@+id/u3"
                android:layout_alignParentStart="true"
                android:text=" TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView137"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text=" Payment Paid" />

            <TextView
                android:id="@+id/u6"
                android:layout_width="220dp"
                android:layout_height="25dp"
                android:layout_below="@+id/u4"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/u5"
                android:text=" TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView138"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text=" Payment Remain" />

            <TextView
                android:id="@+id/u7"
                android:layout_width="220dp"
                android:layout_height="25dp"
                android:layout_below="@+id/u5"
                android:layout_alignParentStart="true"
                android:text=" 0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView146"
                android:layout_width="157dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=" UniqueID" />

            <TextView
                android:id="@+id/u1"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/t1"
                android:layout_alignParentStart="true"
                android:text=" TextView" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>